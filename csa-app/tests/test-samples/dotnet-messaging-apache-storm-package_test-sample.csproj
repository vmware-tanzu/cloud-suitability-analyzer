    <RepositoryType>git</RepositoryType>

    <PackageIconUrl>https://secure.gravatar.com/avatar/08cb1de15b201ab761820bed22b61cb0</PackageIconUrl>
    <PackageProjectUrl>https://github.com/Azure/net-storm-multilang-adapter</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/Azure/net-storm-multilang-adapter/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/Azure/net-storm-multilang-adapter</RepositoryUrl>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <SignAssembly>False</SignAssembly>
