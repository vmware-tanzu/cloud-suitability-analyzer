<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <AssemblyTitle>Dotnet.Storm.Adapter</AssemblyTitle>
    <AssemblyName>Dotnet.Storm.Adapter</AssemblyName>
    <PackageId>Dotnet.Storm.Adapter</PackageId>

    <Description>A dotnet core adapter for apache storm multilang protocol.</Description>
    <PackageTags>microsoft;apache;storm;storm-multilang;storm-dotnet-adapter;dotnet-core-adapter</PackageTags>

    <Version>1.0.1</Version>
    <VersionPrefix>1.0.1</VersionPrefix>
    <FileVersion>1.0.1</FileVersion>

    <NeutralLanguage>en-US</NeutralLanguage>
    <Authors>Microsoft</Authors>
    <Company>Microsoft</Company>
